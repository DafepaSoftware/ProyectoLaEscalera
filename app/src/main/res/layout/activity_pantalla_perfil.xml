<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.software.dafepa.proyectolaescalera.PantallaPerfil">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        app:layout_scrollFlags="scroll|enterAlways" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ly_perfil"
        android:layout_width="match_parent"
        android:layout_height="704dp"
        android:background="@drawable/bg_profile"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/user_sample" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_editar"
                    android:layout_width="119dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttontransparente"
                    android:text="Editar Foto"
                    android:textColor="@color/blanco"
                    android:textSize="10dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Nombre Apellido Apellido"
                android:textColor="@color/blanco"
                android:textSize="18sp" />


            <Button
                android:id="@+id/btn_editarNombre"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="@drawable/buttontransparente"
                android:text="Editar Nombre"
                android:textColor="@color/blanco"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textCorreo"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="correo@correo.com"
                android:textColor="@color/blanco"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_editarEmail"
                android:layout_width="64dp"
                android:layout_height="37dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="@drawable/buttontransparente"
                android:text="Editar Correo"
                android:textColor="@color/blanco"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>





    <!---  Con esto salen las imagenes redondas directamente, no hace falta
    que la imagen sea redonda para que se vea asi

